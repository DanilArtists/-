#include <iostream>
#include <string>
using namespace std; 

class fridge
{
private:
 string brand;
 string model;
 int size;

public:
 fridge (string brand, string model, int size) 
 {
  this->brand; 
  this->model;
  this->size;
 }
 fridge() : brand("Any"), model("Any"), size(0)
 {}
 void fridgeInfo(){
  cout << "Brand: " << brand << endl;
  cout << "Model: " << model << endl;
  cout << "Size: " << size << endl; 
 }

}; 

int main()
{
 setlocale(LC_ALL, "ru");

 int choice;
 cout << "Выберите что вам надо: " << endl;
 cout << "1. Бренд: " << endl;
 cout << "2. Модель: " << endl;
 cout << "3. Размер: " << endl;

 cout << "Вывести:";
 cin >> choice;

 string fridge;
 switch (choice)
 {
 case 1: {
  string brand;
  cout << "Введите бренд: ";
  cin >> brand;
 }
 case 2: 
 {
  string model;
  cout << "Введите модель: ";
  cin >> model;
 }
 case 3: {
  int size;
  cout << "Введите размер: ";
  cin >> size;
 }
 }
 cout << "Холодильник" << fridge << endl; 
}
