#include <iostream>
#include <string>

using namespace std;

class Point {
private:
  int pole1 = intPole1;
  double pole2 = doublePole2;
  string pole3 = stringPole3;

public:
  Point()  pole1(0), pole2(0), pole3("")  {
      cout << "Конструктор вызван" << endl;
  }

  Point(int pole1, double pole2, string pole3) {
      pole1 = intPole1;
      pole2 = doublePole2;
      pole3 = stringPole3;
  }
 
  Point(const point& other) {
    cout << "Конструктор копирования вызван" << endl;
    cout << "  Копирование pole1: " << other.pole1 << pole1 << endl;
    cout << "  Копирование pole2: " << other.pole2 << pole2 << endl;
    cout << "  Копирование pole3: " << other.pole3 << pole3 << endl;
  }

  Point& operator=(const point& other) {
    cout << "Оператор вызван" << endl;
  }

  void pole() 
{
    cout << "pole1:  " << pole1 << endl;
    cout << "pole2:  " << pole2 << endl;
    cout << "pole3:  " << pole3 << endl;
}

  ~Point() {
      cout << "Деструктор вызван" << endl;
  }
};

int main() {
    setlocale(LC_ALL, "Ru");
  Point case1(5, 1.15, "Надпись");
  cout << "Case1: " << endl;

  Point case2 = case1; 
  cout << "Case2: " << endl;

  Point case3; 
  case2 = case1; 
  cout << "Case 3: " << endl;

}
