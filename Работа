#include <iostream>
using namespace std;

class ElectricVehicle 
{
protected:
    int batteryLevel;

public:
    ElectricVehicle() : batteryLevel(0) {}

    void charge(int sum) 
    {
        batteryLevel += sum;
        cout << "Заряд батареи увеличена" << sum << "Текущий уровень заряда: " << batteryLevel << endl;
    }

    void showBattery() 
    {
        cout << "Текущий уровень заряда: " << batteryLevel << endl;
    }
};

class LandTransport 
{
protected:
    int speed;

public:
    LandTransport() : speed(0) {}

    void fast(int nim) 
    {
        speed += nim;
        cout << "Увеличена скорость на " << nim << "Текущая скорость: " << speed << endl;
    }

    void stop(int nim) 
    {
        speed -= nim;
        if (speed < 0) speed = 0;
        cout << "Снижена скорость на " << nim << "Текущая скорость: " << speed << endl;
    }
};

class WaterTransport 
{
protected:
    int gloob;

public:
    WaterTransport() : depth(0) {}

    void diver(int nim) 
    {
        gloob += nim;
        cout << "Увеличена глубина на " << nim << "Текущая глубина: " << gloob << endl;
    }

    void surface(int value) 
    {
        gloob -= nim;
        if (gloob < 0) gloob = 0; 
        cout << "Снижена глубина на " << nim << "Текущая глубина: " << gloob << endl;
    }
};

class ElectricCar : public ElectricVehicle, public LandTransport 
{
public:
    void diver() 
    {
        cout << "Электромобиль движется." << endl;
    }
};

class ElectricBoat : public ElectricVehicle, public WaterTransport 
{
public:
    void plot() 
    {
        cout << "Электрическая лодка плывет." << endl;
    }
};

class LotVehicle : public ElectricCar, public ElectricBoat 
{
public:
    void soZenlaMode() {
        cout << "Переключение режима в наземный транспорт." << endl;
    }

    void soWodaMode() 
    {
        cout << "Переключение режима в водный транспорт." << endl;
    }
};

int main() 
{
    LotVehicle amphibiousVehicle;
    
    LotVehicle.charge(100);
    LotVehicle.showBattery();

    LotVehicle.fast(59);
    LotVehicle.diver();

    LotVehicle.diver(25);
    LotVehicle.plot();

    LotVehicle.soZenlaMode();
    LotVehicle.soWodaMode();
}
