#include <iostream>
using namespace std;

class BaseEnemy 
{
public:
    virtual void DoDamage() = 0; 
    virtual void Die() = 0;       
    virtual void ChasePlayer() = 0; 

    virtual ~BaseEnemy() {} 
};

class Sniper : public BaseEnemy 
{
public:
    void DoDamage() override 
    {
        cout << "Снайпер попадает в цель" << endl;
    }

    void Die() override 
    {
        cout << "Снайпер умирает" << endl;
    }

    void ChasePlayer() override 
    {
        cout << "Снайпер преследует" << endl;
    }
};

 class Soldier : public BaseEnemy 
 {
public:
    void DoDamage() override 
    {
        cout << "Солдат наносит урон" << endl;
    }

    void Die() override 
    {
        cout << "Солдат умирает" << endl;
    }

    void ChasePlayer() override {
        cout << "Солдат преследует" << endl;
    }
};

int main() 
{
Sniper sniper("Снайпер");
Soldier soldier("Солдат");

sniper.DoDamage();
sniper.Die();
sniper.ChasePlayer();

cout << endl;

soldier.DoDamage();
soldier.Die();
soldier.ChasePlayer();

}
